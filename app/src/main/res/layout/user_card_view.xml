<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/user_pic_view"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/avatar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_text"
                    android:enabled="false"
                    android:clickable="false"
                    android:textColor="#000"
                    android:text="mobile"
                    android:background="#fff"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_toEndOf="@+id/user_pic_view"
                    android:layout_toRightOf="@+id/user_pic_view"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_remains"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:enabled="false"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:textSize="13dp"
                    android:textColor="#ff0000"
                    android:background="#fff"
                    android:text=""/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:weightSum="3.02">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="registered on"
                        android:padding="2dp"
                        android:gravity="center"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_registration"
                        android:enabled="false"
                        android:clickable="false"
                        android:textColor="#000"
                        android:text="30/09/2018"
                        android:background="#fff"
                        android:padding="1dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="purchased on"
                        android:padding="2dp"
                        android:gravity="center"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_purchase"
                        android:enabled="false"
                        android:clickable="false"
                        android:textColor="#000"
                        android:text="30/09/2018"
                        android:background="#fff"
                        android:textSize="13sp"
                        android:padding="1dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="expired on"
                        android:padding="2dp"
                        android:gravity="center"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_expiry"
                        android:enabled="false"
                        android:clickable="false"
                        android:textColor="#000"
                        android:text="30/09/2018"
                        android:background="#fff"
                        android:textSize="13sp"
                        android:padding="1dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disable_reason"
                android:visibility="gone"
                android:text="disable reason"
                android:padding="10dp" />
            <LinearLayout
                android:id="@+id/buttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:weightSum="1.8">

                <Button
                    android:id="@+id/accept"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:layout_weight=".8"
                    android:background="@drawable/buttonshape"
                    android:text="Accept"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/reject"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".8"
                    android:layout_margin="3dp"
                    android:background="@drawable/buttonshape1"
                    android:text="Reject"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>