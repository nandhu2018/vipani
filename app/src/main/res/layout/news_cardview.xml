<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="5dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/news_card_view"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_text_bg"
        android:background="@color/colorTransBg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/news_image_card_view_news"
            android:background="@color/textColorGray"
            android:scaleType="fitXY"/>
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_head_card_view_news"
            android:gravity="end"
            android:layout_marginTop="200dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_head_card_view_news"
            android:gravity="start"

            android:padding="10dp"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:background="@color/textColorBlack1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="sample text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_text"
            android:padding="10dp"
            android:background="@color/textColorWhite"
            android:textColor="@color/textColorBlack"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_gravity="end"
            android:textStyle="normal"
            android:text="Self"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>