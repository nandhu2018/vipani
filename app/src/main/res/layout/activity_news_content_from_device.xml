<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gigaappz.vipani.activity.NewsContentFromDevice">
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_height="40dp"
        android:src="@drawable/back"/>
    <ScrollView
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/head_text_news_content_from_device"
                android:text="This is the Heading"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textColorBlack"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/image_news_content_from_device"
                android:src="@drawable/no_thumbnail"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/content_text_news_content_from_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>