<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/card_layout"
        android:paddingBottom="0dp"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:id="@+id/indicator_layout"
                android:background="@color/colorAccent"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_text_domestic"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_head_text_domestic"
                android:textSize="13sp"
                android:textStyle="normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/value_text_domestic"
                android:textSize="15sp"
                android:textStyle="normal"
                android:gravity="end"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/value_sub_text_domestic"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="end"
                android:layout_gravity="end"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_rate_text_domestic"
                android:textSize="15sp"
                android:textStyle="normal"
                android:gravity="end"
                android:layout_gravity="end"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_diff_text_domestic"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="end"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_time_text_domestic"
        android:typeface="monospace"
        android:text="12:37 01/09/2018"
        android:padding="5dp"
        android:textSize="11sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="end"
        android:layout_gravity="end"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorAccent"
        android:padding="10dp"/>
</LinearLayout>
