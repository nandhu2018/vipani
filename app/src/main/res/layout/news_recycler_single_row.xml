<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/image_text_layout_news_recycler">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:id="@+id/news_image_news_recycler"
            android:padding="5dp"
            android:src="@mipmap/vipani"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/news_head_news_recycler"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="4"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_head_dummy_news_recycler"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="4"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_descript_news_recycler"
        android:textStyle="normal"
        android:textSize="15sp"
        android:padding="5dp"
        android:maxLines="3"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"/>
</LinearLayout>